 #include<iostream.h>
 #include<stdio.h>
 #include<math.h>
 int main()
 {
	int a,d,n,i,an,sum=0;
	cout<<"enter 1st number of series";
	cin>>a;
	cout<<"enter total number of terms in the series";
	cin>>n;
	cout<<"enter the common difference";
	cin>>d;
	sum=(n*(2*a+(n-1)*d))/2;
	an=a+(n-1)*d;
	cout<<"sum:";
	for(i=a;i<=an;i=i+d)
	{
	if(i!=an)
		cout<<i<<"+";
	else
		cout<<i<<"="<<sum;
	}
	return 0;
	}
